<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mortal.wms.business.mapper.InfoCategoriesMapper">
    <select id="list">
        select *
        from info_categories
        <if test="type != null">
            where type = #{type}
        </if>
        order by type,display_order
    </select>
</mapper>